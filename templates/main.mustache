{{!
    @template block_cohortcourses/main

    This template renders the main content area for the cohortcourses block.

    Example context (json):
    {}
}}

<div id="block-cohortcourses-{{uniqid}}" class="block-cohortcourses" data-region="cohortcourses">
    <div class="tab-content content-centred">
        {{#showconfig}}
        <p><a href="{{configurl}}">{{# str }} configtitle, block_cohortcourses {{/ str }}</a></p>
        {{/showconfig}}
        <div role="tabpanel" id="cohortcourses_courses_view">
            <div id="courses-view-{{uniqid}}" data-region="courses-view" class="block_cohortcourses_courses_view">
                {{# hascourses}}
                    {{# cohorts }}
                        <h4>{{cohort}}</h4>
                        <ul>
                            {{# courses}}
                            <li>
                                <a href="{{curl}}">{{fullname}}</a>
                            </li>
                            {{/ courses}}
                        </ul>
                    {{/ cohorts }}
                {{/ hascourses}}
            </div>

        </div>
    </div>
</div>
